@{
    Layout = "";
}
@model NopBrasil.Plugin.Shipping.Correios.Models.CorreiosShippingModel
@using Nop.Web.Framework;

<div style="color:Red;">
    @Html.ValidationSummary(false)
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <a href="http://www.nopcommercebrasil.com"><img src="/Plugins/Shipping.Correios/Content/Images/nopCommerceBrasil.png"></a>
                    <br />
                    <p>
                        Este plugin foi desenvolvido por <a href="http://www.nopcommercebrasil.com">NopCommerce Brasil - http://www.nopcommercebrasil.com</a><br />
                        Em caso de dúvidas ou problemas por favor entre em contato conosco através do email <a href="mailto:nopcommercebrasil@nopcommercebrasil.com" target="_top">nopcommercebrasil@nopcommercebrasil.com</a><br />
                        Este plugin é open-source e seu código-fonte está disponível no <a href="https://github.com/nopCommerceBrasil">GitHub do NopCommerce Brasil</a> no repositório <a href="https://github.com/nopCommerceBrasil/NopBrasil.Plugin.Shipping.Correios">NopBrasil.Plugin.Shipping.Correios</a>
                    </p>
                    <br />

                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.Url)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Url)
                        @Html.ValidationMessageFor(model => model.Url)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.CompanyCode)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CompanyCode)
                        @Html.ValidationMessageFor(model => model.CompanyCode)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.Password)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.PostalCodeFrom)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PostalCodeFrom)
                        @Html.ValidationMessageFor(model => model.PostalCodeFrom)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.AddDaysForDelivery)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.AddDaysForDelivery)
                        @Html.ValidationMessageFor(model => model.AddDaysForDelivery)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.AvailableCarrierServices)
                    </div>
                    <div class="col-md-9">
                        <div style="height: 250px; width: 300px; overflow: auto; border: solid 1px #bbb;">
                            @foreach (var csd in Model.AvailableCarrierServices)
                            {
                                <input type="checkbox" name="CheckedCarrierServices" value="@(csd)" checked="@Model.ServicesOffered.Contains(csd)" />
                                    <label>@csd</label>
                                    <br />
                            }
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.ServiceNameDefault)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.ServiceNameDefault)
                        @Html.ValidationMessageFor(model => model.ServiceNameDefault)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.ShippingRateDefault)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.ShippingRateDefault)
                        @Html.ValidationMessageFor(model => model.ShippingRateDefault)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.QtdDaysForDeliveryDefault)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.QtdDaysForDeliveryDefault)
                        @Html.ValidationMessageFor(model => model.QtdDaysForDeliveryDefault)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.PercentageShippingFee)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PercentageShippingFee)
                        @Html.ValidationMessageFor(model => model.PercentageShippingFee)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}
